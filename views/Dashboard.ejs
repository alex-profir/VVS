<body>
    <div class="container">
        <p>
            Status
        </p>
        <p class="status">
            <%= isRunning %>
        </p>
        <div>
            <iframe name="dummyframe" id="dummyframe" style="display: none;"></iframe>
            <form action="/start" method="post" target="dummyframe">
                Port: <input type="text" name="port" value="<%= port %>" /><br><br>
                <input type="submit" <%= isRunning ? `disabled="true" ` : `` %> value="Start" /><br><br>
                <hr>
            </form>

        </div>
    </div>
</body>

